{
  "name": "mesh-gradient.js",
  "version": "0.0.3",
  "description": "A tiny utility to generate mesh gradients in a HTML canvas.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "preversion": "npm run test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "lint": "tslint -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/*.ts\" \"src/*.js\" \"src/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anup-a/mesh-gradient.js.git"
  },
  "keywords": [
    "Mesh gradient",
    "Mesh",
    "Gradient",
    "Canvas"
  ],
  "author": "Anup A",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/anup-a/mesh-gradient.js/issues"
  },
  "homepage": "https://github.com/anup-a/mesh-gradient.js#readme",
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "jest": "^28.1.3",
    "jest-canvas-mock": "^2.4.0",
    "jest-environment-jsdom": "^28.1.3",
    "jest-webgl-canvas-mock": "^0.2.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  }
}
